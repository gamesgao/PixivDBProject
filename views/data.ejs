<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <script src="/javascripts/vue.js"></script>
    <script src="/javascripts/vue-resource.js"></script>
    <!-- Bootstrap -->
    <link href="http://cdn.bootcss.com/bootstrap/3.3.6/css/bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap-theme.css">
    <link href="/stylesheets/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/datastyle.css' />
    <!-- this is uesd when the project is over -->
    <!-- <script src="/javascripts/vue.min.js"></script> -->
</head>

<body>
    <!--导航栏-->
    <!-- Fixed navbar -->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                </button>
                <a class="navbar-brand" href="/">PM 2.5</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/comm">Predict</a></li>
                    <li class="active"><a href="/data">Search</a></li>
                    <li><a href="/map">Map</a></li>
                    <li><a href="#">About us</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
    <form id="selector">
        <div class="form-group">
            <label for="timeInput">查询时间段</label>
            <div class='input-group date' id='timeInput'>
                <input type='text' class="form-control" />
                <span class="input-group-addon">  
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            <label for="quantityInput">查询数量</label>
            <input type="text" id="quantityInput" class="form-control" name="username" v-model.number="quantity" />
        </div>
        <div class="form-group">
            <button type="submit" v-bind:class="[baseClass, statusClass]" v-bind:disabled="isDisable" v-on:click="searchData">search</button>
        </div>
    </form>
    <div class="table-responsive">
        <table id="showList" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>时间</th>
                    <th>经度</th>
                    <th>纬度</th>
                    <th>pm含量</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="item in items">
                    <td>{{ (new Date(item.TIME)).toString() }}</td>
                    <td>{{ item.LOT }}</td>
                    <td>{{ item.LAT }}</td>
                    <td>{{ item.PM }}</td>
                    <!-- LOT:{{ item.LOT }}.LAT:{{ item.LAT }}.PM:{{ item.PM }} -->
                </tr>
            </tbody>
        </table>
    </div>
    <!-- this is the bind scripts -->
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/bootstrap-datetimepicker.min.js" charset="UTF-8"></script>
    <!-- 注意bind的js必须放在页面的最后 -->
    <script src="/javascripts/bind/data.js"></script>
    <script type="text/javascript">
    $(function() {
        $('#timeInput').datetimepicker({
            locale: 'zh-cn',
            autoclose: true
        });
    });
    </script>
</body>

</html>
