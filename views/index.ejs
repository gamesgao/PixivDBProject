<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <!--Vue-->
    <script src="/javascripts/vue.js"></script>
    <script src="/javascripts/vue-resource.js"></script>
    <!-- Bootstrap -->
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <!--Flat UI-->
    <link href="/stylesheets/flat-ui.css" rel="stylesheet">
    <!--User-->
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <!-- Fixed navbar -->
    <style>
        body {
            /*min-height: 2000px;*/
            padding-top: 50px;
        }
    </style>

    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>  
                </button>
                <a class="navbar-brand" href="/">PM 2.5</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/comm">Predict</a></li>
                    <li><a href="/data">Search</a></li>
                    <li><a href="/map">Map</a></li>
                    <li><a href="#">About us</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!--webpage body-->
    <div id="header">
        <img id='bg' src='/img/main-bg.jpg' />
        <div class="container">
            <h1>Pixiv</h1>
            <div class="row" id="btngroup">
                <div class="col-lg-6"></div>
                <div class="col-lg-6">
                    <div class="btn-group btn-group-justified" role="group">
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary btn-hg" onClick="window.location.href='/login'">
                            Login
                        </button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-warning btn-hg" onClick="window.location.href='/register'">
                            register
                        </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--footer part-->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h3 class="footer-title">PM2.5 cloud platform by SJTU
                    </h3>
                </div>
                <div class="col-md-2">
                    <h6><a href="#" class="footer-title">&copy; 联系我们</a></h6>
                </div>
            </div>
        </div>
    </footer>
    <div id="test">
        <p>{{test}}</p>
    </div>

    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <script>
        var testVM = new Vue({
            el: '#test',
            data: {
                test: "<%= test %>"
            }
        });
    </script>
</body>

</html>